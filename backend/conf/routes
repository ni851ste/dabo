# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
# GET     /websocket                  controllers.HomeController.socket

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

#Usermanagement
POST    /user/create                model.user.UserHttpAdapter.createUserAdapter(request: Request)
POST    /user/delete/:id            model.user.UserHttpAdapter.deleteUserAdapter(id: Int)
POST    /user/update                model.user.UserHttpAdapter.updateUserAdapter(request: Request)
POST    /user/finde/:name           model.user.UserHttpAdapter.findeUserAdapter(name: String)