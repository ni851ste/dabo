# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
# GET     /websocket                  controllers.HomeController.socket

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

#Article
GET        /users/articles/:id             model.article.ArticleHttpAdapter.showArticleAdapter(id: Int)
POST        /users/articles/create         model.article.ArticleHttpAdapter.addArticleAdapter(request: Request)
POST        /users/articles/delete/:id     model.article.ArticleHttpAdapter.deleteArticleAdapter(id: Int)