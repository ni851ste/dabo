# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
# GET     /websocket                  controllers.HomeController.socket

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

#Usermanagement
POST    /user/create                model.user.UserHttpAdapter.createUser(request: Request)
POST    /user/delete/:id            model.user.UserHttpAdapter.deleteUser(id: Int)
POST    /user/update                model.user.UserHttpAdapter.updateUser(request: Request)
POST    /user/find/:name            model.user.UserHttpAdapter.findUser(name: String)